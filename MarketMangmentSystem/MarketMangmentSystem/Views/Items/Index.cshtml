@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />


<div class="d-flex justify-content-center align-items-center container px-2">



    @foreach (var item in Model)
    {
        <div class="card">
            <div class="top d-flex flex-row align-items-center">

                <center> <h6 class="mb-0 mr-2">@item.Barcode</h6></center>


            </div>

            <div class="middle">


                <img src="https://i.imgur.com/b4nm7pc.png" width="250" class="mt-3">
                <h5>@item.Desc</h5>
                <span>Each - approx 1.2KG</span>


            </div>

            <div class="bottom d-flex flex-row justify-content-center">

                <div class="input-group mb-1">
                    <button class="input-group-text">+</button>
                    <input type="text" class="form-control" value="1">
                    <button class="input-group-text">-</button>
                </div>

                <button class="btn btn-success btn-sm add">Add For <b>$@item.Price</b></button>

            </div>


        </div>

    }
</div>



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
