
@{
    ViewData["Title"] = "Dispaly";
}

<h1>Dispaly</h1>

<div class="d-flex justify-content-center align-items-center container px-2">


 
        <div class="card">
            <div class="top d-flex flex-row align-items-center">
                <center> <h6 class="mb-0 mr-2">@Model.Barcode</h6></center>
            </div>

            <div class="middle">
                <img src=@Url.Content("~/Images/" + @Model.ImagePath)
                 asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

                <h5>@Model.Desc</h5>
                <span>Each - approx 1.2KG</span>

            </div>

            <div class="bottom d-flex flex-row justify-content-center">
                <div class="input-group mb-1">
                    <button class="input-group-text">+</button>
                    <input type="text" class="form-control" value="1">
                    <button class="input-group-text">-</button>
                </div>

                <button class="btn btn-success btn-sm add">Add For <b>$@Model.Price</b></button>

            </div>
        </div>

    
</div>